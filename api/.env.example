# MyLightWay Django API - Environment Configuration
# Copy this file to .env and fill in your values

# Django Settings
SECRET_KEY=your-very-secret-django-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/mylightway_dev

# JWT Configuration
JWT_ACCESS_EXPIRES_MINUTES=15
JWT_REFRESH_EXPIRES_DAYS=7
JWT_SIGNING_KEY=your-jwt-signing-key-here

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379/1

# Celery Configuration  
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@mylightway.com

# File Upload Settings
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880

# Logging
DJANGO_LOG_LEVEL=INFO