# MyLightWay API Server - Environment Configuration Template
# Copy this file to .env in your API server directory and fill in your actual values

# Application Settings
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/mylightway_dev
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_CONNECTION_TIMEOUT=60000

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-token-key-here-minimum-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-here-minimum-32-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=mylightway-api
JWT_AUDIENCE=mylightway-app

# API Configuration
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100
API_CORS_ORIGIN=http://localhost:8080
API_BODY_LIMIT=10mb
API_TIMEOUT=30000

# Email Service (for notifications and password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@mylightway.com
FROM_NAME=MyLightWay

# File Upload Configuration
UPLOAD_MAX_FILE_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,audio/mpeg,video/mp4
UPLOAD_DESTINATION=./uploads
CDN_BASE_URL=https://cdn.mylightway.com

# External Services
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Bible API Integration
BIBLE_API_KEY=your-bible-api-key
BIBLE_API_BASE_URL=https://api.scripture.api.bible

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-here
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_REPORTING=true

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=mylightway:
CACHE_TTL=3600

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-here
CSRF_SECRET=your-csrf-secret-key-here
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-for-external-services
WEBHOOK_TIMEOUT=5000

# Development Settings
DEBUG=true
ENABLE_API_DOCS=true
ENABLE_CORS=true
ENABLE_PLAYGROUND=true
MOCK_EXTERNAL_SERVICES=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/mylightway_test
TEST_JWT_SECRET=test-jwt-secret-key
TEST_REDIS_DB=1

# Production Settings (uncomment for production)
# NODE_ENV=production
# DATABASE_SSL=true
# DEBUG=false
# ENABLE_API_DOCS=false
# ENABLE_PLAYGROUND=false
# ENABLE_CORS=false
# LOG_LEVEL=warn